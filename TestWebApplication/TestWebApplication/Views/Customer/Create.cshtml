@model Customer

@{
    ViewData["Title"] = "Create Customer";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card card-dark">
            <div class="card-header">
                <h4 class="card-title">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <div class="col-sm-12">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-sm"></div>
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-2 text-sm"></label>
                            <div class="col-sm-5">
                                <input asp-for="Name" class="form-control form-control-sm" />
                            </div>
                            <div class="col-sm-5">
                                <span asp-validation-for="Name" class="text-sm text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-check mr-2"></i>Create</button>
                        <a asp-controller="Customer" asp-action="Index" class="btn btn-sm btn-secondary"><i class="fa fa-times mr-2"></i>Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>