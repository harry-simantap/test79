@model IEnumerable<Transaction>

@{
    ViewData["Title"] = "Transaction";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">
                    <a class="btn btn-sm btn-primary mr-2" asp-controller="Transaction" asp-action="Create"><i class="fa fa-plus mr-2"></i>Add New</a>
                    @ViewData["Title"]
                </h4>
            </div>
            <div class="card-body">
                <div class="table-responsive table-responsive-sm">
                    <table class="table table-sm" id="datatables">
                        <thead>
                            <tr>
                                <th>Transaction Date</th>
                                <th>Customer</th>
                                <th>Description</th>
                                <th>Debit/Credit</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.TransactionDate)</td>
                                        <td>@Html.DisplayFor(m => item.Customer.Name)</td>
                                        <td>@Html.DisplayFor(m => item.Description)</td>
                                        <td>@Html.DisplayFor(m => item.DebitCreditStatus)</td>
                                        <td class="text-right">@Html.DisplayFor(m => item.Amount)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#datatables').DataTable({
            "paging": true,
            "lengthChange": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "order": [[0, "desc"], [1, "asc"]]
        });
    })
</script>